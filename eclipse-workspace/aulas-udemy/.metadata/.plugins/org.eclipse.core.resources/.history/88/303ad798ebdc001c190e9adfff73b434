package udemyAulas;

import java.util.Scanner;

public class Exercicio2LP {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		double raio, pi, area;
		
		pi = 3.14159;
		
		System.out.println("Digite o valor do raio:");
		raio = sc.nextDouble();
		
		area = Math.sqrt(raio) * pi;
		
		System.out.printf("O raio escolhido foi de %.2f%n A area deste raio eh %.4f", raio, area);
		
		sc.close();
	}

}