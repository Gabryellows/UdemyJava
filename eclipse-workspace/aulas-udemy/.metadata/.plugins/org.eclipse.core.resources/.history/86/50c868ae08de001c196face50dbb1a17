package udemyAulas;

import java.util.Locale;
import java.util.Scanner;

public class Exercicio5Condicionais {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int codigo;
		String especificacao;
		double preco;
		
		System.out.printf("Digite um codigo de 1 a 5");
		codigo = sc.nextInt();
		
		if (codigo == 1) {
			preco = 4.00;
			System.out.println("Você escolheu Cachorro Quente tunado");
			System.out.printf("O preco do produto é: R$%.2f%n" , preco);
		} else if (codigo == 2){
			preco = 4.50;
			System.out.println("Você escolheu X-salada tunado");
			System.out.printf("O preco do produto é: R$%.2f%n" , preco);
		} else if (codigo == 3){
			preco = 5.00;
			System.out.println("Você escolheu X-bacon tunado");
			System.out.printf("O preco do produto é: R$%.2f%n" , preco);
		} else if (codigo == 4){
			preco = 2.00;
			System.out.println("Você escolheu Torrada simples tunado");
			System.out.printf("O preco do produto é: R$%.2f%n" , preco);
		} else if (codigo == 5){
			preco = 1.00;
			System.out.println("Você escolheu Refrigerante tunado");
			System.out.printf("O preco do produto é: R$%.2f%n" , preco);
		} else {
			System.out.println("Você escolheu um produto inexistente.");
		}
		
		sc.close();

	}

}
